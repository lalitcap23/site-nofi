generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(uuid())
  email String
}

model Website {
  id      String         @id @default(uuid()) 
  url     String
  UsedId  String
  ticks   WebsiteTick[]
}

model Validator {
  id        String        @id @default(uuid())
  publicKey String
  location  String
  ip        String
  ticks     WebsiteTick[]
}

model WebsiteTick {
  id          String        @id @default(uuid())
  websiteId   String
  validatorId String
  createdAt   DateTime
  status      WebsiteStatus
  latency     Float

  website     Website   @relation(fields: [websiteId], references: [id])
  validator   Validator @relation(fields: [validatorId], references: [id])
}

enum WebsiteStatus {
  Good
  Bad
}
